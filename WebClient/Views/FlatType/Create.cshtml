@model CreateFlatTypeViewModel
@{
    ViewData["Title"] = "Flat Type Page - Create";
}

<div class="container">
<h3>Daire tipi Ekle</h3>
<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="RoomCount" class="form-label"></label>
        <input asp-for="RoomCount" class="form-control" id="roomCount" aria-describedby="roomCountHelp">
        <div id="roomCountHelp" class="form-text">Oda sayısını giriniz.</div>
    </div>
    <div class="mb-3">
        <label asp-for="LivingRoomCount" class="form-label"></label>
        <input asp-for="LivingRoomCount" class="form-control" id="livingRoomCount" aria-describedby="livingRoomCountHelp">
        <div id="livingRoomCountHelp" class="form-text">Salon sayısını giriniz.</div>
    </div>
    <input type="submit" value="Create" class="btn btn-primary">
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


</div>


