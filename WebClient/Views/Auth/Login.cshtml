@model WebClient.Models.Auth.LoginPersonViewModel
@{
    ViewData["Title"] = "Login Page";
}

<div class="container">
    <h3>Login </h3>
    <form method="post" asp-action="Login">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">E-mail giriniz.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" id="password" type="password" aria-describedby="passwordHelp">
            <div id="passwordHelp" class="form-text">Şifreyi giriniz.</div>
        </div>
        <input type="submit" value="Login" class="btn btn-primary">
    </form>
    <div>
        <a asp-action="Register">Kayıt olmak için...</a>
    </div>


</div>