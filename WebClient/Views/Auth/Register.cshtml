@model WebClient.Models.Auth.RegisterPersonViewModel
@{
    ViewData["Title"] = "Register Page";
}

<div class="container">
    <h3>Register </h3>
    <form method="post" asp-action="Register">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" type="text" class="form-control" id="fullName" aria-describedby="fullNameHelp">
            <div id="fullNameHelp" class="form-text">Tam adı giriniz.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">E-mail giriniz.</div>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" id="password" type="password" aria-describedby="passwordHelp">
            <div id="passwordHelp" class="form-text">Şifreyi giriniz.</div>
        </div>
        <input type="submit" value="Register" class="btn btn-primary">
    </form>
    <div>
        <a asp-action="Login">Giriş yapmak için...</a>
    </div>


</div>