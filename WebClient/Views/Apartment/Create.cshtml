@using WebClient.Models.Apartment
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model CreateApartmentViewModel
@{
    ViewData["Title"] = "Apartment Page - Create";
}

<div class="container">
<h3>Apartman Blok Ekle</h3>
<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" id="name" aria-describedby="apartmentNameHelp">
        <div id="apartmentNameHelp" class="form-text">Apartman adını giriniz.</div>
    </div>
    <div class="mb-3">
        <label asp-for="TotalFloors" class="form-label"></label>
        <input asp-for="TotalFloors" class="form-control" id="totalFloors" aria-describedby="apartmentTotalFloorsHelp">
        <div id="apartmentTotalFloorsHelp" class="form-text">Apartmanın toplam kat sayısını giriniz.</div>
    </div>
    <input type="submit" value="Create" class="btn btn-primary">
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


</div>


