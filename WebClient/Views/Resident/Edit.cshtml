@model WebClient.Models.Resident.UpdateResidentViewModel
@{
    ViewData["Title"] = "Resident Page - Edit";
}

<div class="container p-3">

    <h2>Konaklayan Detayı</h2>
    <form method="post" asp-action="Edit">
            <input asp-for="PersonId" hidden />
            <div class="mb-3">
                <label asp-for="HouseId" class="form-label"></label>
                <input asp-for="HouseId" type="text" class="form-control" id="houseId" value=@Model.HouseId >
            </div>
            <div class="mb-3">
                <label asp-for="CarPlate" class="form-label"></label>
                <input asp-for="CarPlate" type="text" class="form-control" id="carPlate" aria-describedby="carPlateHelp" value=@Model.CarPlate>
            </div>
            <div class="form-check">
                <label class="form-check-label" for="isHirer">Kiracı mı?</label>
                <input asp-for="IsHirer" class="form-check-input" id="isHirer" type="checkbox" value=@Model.IsHirer aria-describedby="isHirerHelp">
            </div>
        <input type="submit" value="Edit" class="btn btn-primary">
    </form>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>


</div>
