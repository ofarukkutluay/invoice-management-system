@model WebClient.Models.Resident.CreateResidentViewModel
@{
    ViewData["Title"] = "Resident Page - Create";
}

<div class="container">
<h3>Konaklayan Ekle</h3>
<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="PersonId" class="form-label"></label>
        <div class="input-group mb-3">
            <select asp-for="PersonId" asp-items="@ViewData["Persons"] as IEnumerable<SelectListItem>" class="form-control" aria-describedby="personHelp">
                <option disabled selected>--Select Person--</option>
            </select>
            <a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#registerModal">+</a>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="HouseId" class="form-label"></label>
        <div class="input-group mb-3">
            <select asp-for="HouseId" asp-items="@ViewData["Houses"] as IEnumerable<SelectListItem>" class="form-control" aria-describedby="houseHelp">
                <option disabled selected>--Select House--</option>
            </select>
        </div>
        <div id="houseHelp" class="form-text">Ev giriniz. Aradığınız ev biligisi yok ise eklemek için <a asp-controller="House" asp-action="Create">tıklayınız..</a></div>
    </div>
    <div class="mb-3">
        <label asp-for="CarPlate" class="form-label"></label>
        <input asp-for="CarPlate" class="form-control" id="carPlate" aria-describedby="carPlateHelp">
        <div id="carPlateHelp" class="form-text">Araç Plakası giriniz.</div>
    </div>
    <div class="form-check">
        <label class="form-check-label" for="isHirer">Kiracı mı?</label>
        <input asp-for="IsHirer" class="form-check-input" id="isHirer" type="checkbox" aria-describedby="isHirerHelp">
        <div id="isHirerHelp" class="form-text">Kiracı durumunu giriniz.</div>
    </div>
    <input type="submit" value="Create" class="btn btn-primary">
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


</div>


