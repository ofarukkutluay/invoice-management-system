@model WebClient.Models.Resident.CreateResidentViewModel
@{
    ViewData["Title"] = "Resident Page - Create";
}

<div class="container">
<h3>Konaklayan Ekle</h3>
<form method="post" asp-action="Create">
    <div class="mb-3">
        <label asp-for="PersonId" class="form-label"></label>
        <input asp-for="PersonId" class="form-control" id="personId" aria-describedby="personIdHelp">
        <div id="personIdHelp" class="form-text">Kullanıcı id giriniz.</div>
    </div>
    <div class="mb-3">
        <label asp-for="HouseId" class="form-label"></label>
        <input asp-for="HouseId"  class="form-control" id="houseId" aria-describedby="houseIdHelp">
        <div id="houseIdHelp" class="form-text">Ev id giriniz.</div>
    </div>
    <div class="mb-3">
        <label asp-for="CarPlate" class="form-label"></label>
        <input asp-for="CarPlate" class="form-control" id="carPlate" aria-describedby="carPlateHelp">
        <div id="carPlateHelp" class="form-text">Araç Plakası giriniz.</div>
    </div>
    <div class="form-check">
        <label class="form-check-label" for="isHirer">Kiracı mı?</label>
        <input asp-for="IsHirer" class="form-check-input" id="isHirer" type="checkbox" aria-describedby="isHirerHelp">
        <div id="isHirerHelp" class="form-text">Kiracı durumunu giriniz.</div>
    </div>
    <input type="submit" value="Create" class="btn btn-primary">
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


</div>


