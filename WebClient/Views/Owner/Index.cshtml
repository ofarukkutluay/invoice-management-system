@model IEnumerable<WebClient.Models.Owner.GetOwnersViewModel>

@{
    ViewData["Title"] = "Owner Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Owner List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Owner" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Owner
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Any())
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th scope="col">PersonId</th>
                <th scope="col">Person Name</th>
                <th scope="col">House</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.PersonId</th>
                    <td width="30%">@item.PersonName</td>
                    <td width="30%">@item.House</td>
                    <td class="text-center">
                        <a asp-controller="Owner" asp-action="Delete" asp-route-Id=@item.PersonId class="btn btn-danger">
                            Del
                        </a>
                        <a asp-controller="Owner" asp-action="Edit" asp-route-Id=@item.PersonId class="btn btn-primary">
                            Edit
                        </a>
                    </td>
                </tr>

            }

            </tbody>
        </table>
    }
    else
    {
        <h5 class="text-center">Gösterilecek data bulunamadı...</h5>
    }

</div>