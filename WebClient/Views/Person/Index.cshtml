@model WebClient.Models.Person.GetPersonViewModel
@{
}
<div class="container">
    <div class="row">
        <h1 class="display-5">Hoş geldin : @Model.FullName</h1>
        <div class="col-md-2">
            <div class="row">
                <h5>Email : </h5>
                <span class="border-bottom"></span>
            </div>
            <div class="row">
                <h5>Mobil number : </h5>
                <span class="border-bottom"></span>
            </div>
            <div class="row">
                <h5>Citizen Id : </h5>
                <span class="border-bottom"></span>
            </div>
            <div class="row">
                <h5>Durumu : </h5>
                <span class="border-bottom"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <h5 class="text-muted">@Model.Email</h5>
                <span class="border-bottom"></span>
            </div>
            <div class="row">
                <h5 class="text-muted">@Model.MobileNumber</h5>
                <span class="border-bottom"></span>
            </div>
            <div class="row">
                <h5 class="text-muted">@Model.CitizenId</h5>
                <span class="border-bottom"></span>
            </div>
            <div class="row">
                <h5 class="text-muted">@Model.IsActive</h5>
                <span class="border-bottom"></span>
            </div>
        </div>
    </div>
    <div class="position-relative">
        <a class="btn btn-warning position-absolute top-0 end-0" asp-controller="Person" asp-action="Edit" asp-route-Id=@Model.Id>Düzenle</a>
    </div>

</div>